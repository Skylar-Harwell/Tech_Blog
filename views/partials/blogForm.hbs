<form id="blog-form">
  <div class="form-group">
    <label for="blogTitle" class="col-4 col-form-label">Blog Title</label> 
    <div class="col-8">
      <input value="{{title}}" id="blogTitle" name="blog-title" placeholder="Enter Blog Title" type="text" required="required" class="form-control" data-bv-notempty="true" data-bv-notempty-message="Username field cannot be blank">
    </div>
  </div>
  <div class="form-group">
    <label class="col-4 col-form-label" for="blogContent">Blog Content</label> 
    <div class="col-8">
      <textarea id="blogContent" name="blogContent" cols="40" rows="10" class="form-control" required="required">{{content}}</textarea>
    </div>
  </div> 
  <div class="form-group">
    <div class="offset-4 col-8">
      <button name="submit" type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>